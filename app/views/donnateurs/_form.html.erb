<%= simple_form_for(@donnateur) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nom %>
    <%= f.input :prenom %>
    <%= f.input :adresse_1 %>
    <%= f.input :adresse_2 %>
    <%= f.input :code_postal %>
    <%= f.input :ville %>
    <%= f.input :telephone %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: ['btn', 'btn-primary'] %>
  </div>
<% end %>
